<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.presentation.register.RegisterFragment">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           tools:visibility="visible">

           <FrameLayout
               android:id="@+id/headerWrapper"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:background="#000"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/header_bg"
                   android:scaleType="centerCrop"
                     android:contentDescription="@string/app_name"
                   />

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <com.google.android.material.appbar.AppBarLayout
                       android:id="@+id/topAppBarLayout"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:color/transparent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <com.google.android.material.appbar.MaterialToolbar
                           android:id="@+id/topAppBar"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           app:navigationIcon="@drawable/ic_arrow_left"
                           app:navigationIconTint="@color/white"
                           app:title="" />
                   </com.google.android.material.appbar.AppBarLayout>


                   <TextView
                       android:id="@+id/registerText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:text="@string/register"
                       android:textColor="@color/white"
                       android:textSize="30sp"
                       app:layout_constraintBottom_toTopOf="@+id/createAccountText"
                       app:layout_constraintLeft_toLeftOf="parent" />

                   <TextView
                       android:id="@+id/createAccountText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:paddingBottom="10dp"
                       android:text="@string/create_account"
                       android:textColor="@color/white"
                       android:textSize="16sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent" />

               </androidx.constraintlayout.widget.ConstraintLayout>
           </FrameLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/nameFieldLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/headerWrapper"
               android:layout_marginTop="5dp"
               app:boxStrokeColor="@color/md_theme_light_primary"
               app:hintTextColor="@color/md_theme_light_primary"
               android:layout_marginHorizontal="16dp"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/nameField"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_user"
                   android:hint="@string/name"
                   android:inputType="text"
                   tools:text="Jhon Doe" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/emailFieldLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/nameFieldLayout"
               android:layout_marginTop="5dp"
               app:boxStrokeColor="@color/md_theme_light_primary"
               app:hintTextColor="@color/md_theme_light_primary"
               android:layout_marginHorizontal="16dp"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/emailField"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/email"
                   android:drawableEnd="@drawable/ic_email"
                   android:inputType="textEmailAddress"
                   tools:text="alguien@correo.com"
                   />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/passwordFieldLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/emailFieldLayout"
               android:layout_marginTop="5dp"
               app:boxStrokeColor="@color/md_theme_light_primary"
               app:hintTextColor="@color/md_theme_light_primary"
               app:helperTextTextColor="@color/md_theme_light_primary"
               android:layout_marginHorizontal="16dp"
               app:endIconMode="password_toggle"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/passwordField"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/password"
                   android:inputType="textPassword"
                   tools:text="asacxdsdf"
                   />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/repeatPasswordFieldLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/passwordFieldLayout"
               android:layout_marginTop="5dp"
               app:boxStrokeColor="@color/md_theme_light_primary"
               app:hintTextColor="@color/md_theme_light_primary"
               app:helperTextTextColor="@color/md_theme_light_primary"
               android:layout_marginHorizontal="16dp"
               app:endIconMode="password_toggle"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/repeatPasswordField"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/repeat_password"
                   android:inputType="textPassword"
                   tools:text="asacxdsdf"
                   />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.flexbox.FlexboxLayout
               android:id="@+id/termsAndConditionsLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
               app:layout_constraintTop_toBottomOf="@id/repeatPasswordFieldLayout"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:alignItems="center"
               app:flexWrap="wrap"
               >

               <CheckBox
                   android:id="@+id/termsCheckbox"
                   android:layout_width="wrap_content"
                   android:layout_height="16dp"
                   android:text="@string/accept_terms"
                   android:textSize="14sp"
                   tools:ignore="TouchTargetSizeCheck"
                   />

               <TextView
                   android:id="@+id/termsText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/terms"
                   android:textStyle="bold"
                   android:textColor="@color/md_theme_light_primary"
                   android:textSize="14sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/and"
                   android:textSize="14sp"
                   />

               <TextView
                   android:id="@+id/conditionsText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/conditions"
                   android:textStyle="bold"
                   android:textColor="@color/md_theme_light_primary"
                   android:textSize="14sp"
                   />

           </com.google.android.flexbox.FlexboxLayout>

           <Button
               android:id="@+id/registerButton"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="2dp"
               android:backgroundTint="@color/md_theme_light_primary"
               android:paddingVertical="10dp"
               android:text="@string/create_account"
               android:textSize="17sp"
               app:cornerRadius="10dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/termsAndConditionsLayout"
               app:layout_constraintVertical_bias="0.0" />

       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1000000"
        tools:visibility="gone"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </FrameLayout>



</FrameLayout>